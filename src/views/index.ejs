<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <% if(contatos.length > 0){%>
        <p class="text-center lead">Seus contatos estão abaixo</p>
      <% } else {%>
        <p class="text-center lead">Você não possui contatos cadastrados.</p>
      <% }%>
      <%- include('includes/messages'); %>

      <div class="responsive table">
        <table class="table my-3">
          <% if(contatos.length > 0){%>
            <tr>
              <td>Nome</td>
              <td>Sobrenome</td>
              <td>E-mail</td>
              <td>Telefone</td>
            </tr>
          <% } %>
          <% contatos.forEach(contato => { %>
            <tr>
              <td><%= contato.nome %></td>
              <td><%= contato.sobrenome %></td>
              <td><%= contato.email %></td>
              <td><%= contato.telefone %></td>
              <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
              <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
            </tr>
          <% }); %>
          
        </table>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>

</div>

<%- include('includes/footer') %>